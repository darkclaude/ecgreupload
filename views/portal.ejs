						  	<!-- Tab panes /create account starts here -->


								 	<div class="tab-content">
						    	<div role="tabpanel" class="tab-pane active text-center" id="create">
						    		&nbsp;&nbsp;
						    		<span id="login_fail" class="response_error" style="display: none;">Loggin failed, please try again.</span>
						    		<div class="clearfix"></div>
						    		<form>
										<div class="form-group">
										<div ng-bind-html="createalert"></div>

									    	<div class="input-group">
						 
									      		<div class="input-group-addon"><i class="fa fa-user"></i></div>
									      		<input  ng-model="username1" type="text" class="form-control" id="login_username" placeholder="Enter Your Username..">
									    	</div>
									    	<span class="help-block has-error" id="email-error"></span>
									  	</div>
										
									  	<div class="form-group">
									    	<div class="input-group">
									      		<div class="input-group-addon"><i class="fa fa-dollar"></i></div>
									      		<input ng-model="amount1" type="text" class="form-control" id="amount" placeholder="Amount">
									    	</div>
									    	<span class="help-block has-error" id="password-error"></span>
									  	</div>
							  			<button type="button" id="login_btn" class="btn btn-block bt-login"  ng-click=" create()">Create Account</button>
							  			
										<div class="clearfix"></div>
							  			<div class="login-modal-footer">
							  				<div class="row">
												<div class="col-xs-8 col-sm-8 col-md-8">
									
													<a href="javascript:;" class="signup-tab">User Profile</a>
												
												</div>
												
												<div class="col-xs-4 col-sm-4 col-md-4">
													<i class="fa fa-check"></i>
													<a href="javascript:;" class="signup-tab">Transfer </a>
												</div>
											</div>
							  			</div>
									</form>
						    	</div>
					<!--Credit Starts here-->
								<div role="tabpanel" class="tab-pane text-center" id="credit">
						    		&nbsp;&nbsp;
						    		<span id="login_fail" class="response_error" style="display: none;">Loggin failed, please try again.</span>
						    		<div class="clearfix"></div>
						    		<form>
										<div class="form-group">
										<div ng-bind-html="creditalert"></div>

									    	<div class="input-group">
									      		<div class="input-group-addon"><i class="fa fa-user"></i></div>
									      		<input  ng-model="username2" type="text" class="form-control" id="login_username" placeholder="Username">
									    	</div>
									    	
									  	</div>
										
									  	<div class="form-group">
									    	<div class="input-group">
									      		<div class="input-group-addon"><i class="fa fa-dollar"></i></div>
									      		<input ng-model="amount2" type="text" class="form-control" id="amount" placeholder="Amount">
									    	</div>
									    	
									  	</div>
										
									
				<button type="button" id="login_btn" class="btn btn-block bt-login" ng-click="addCredit()" data-loading-text="Initiating Account....">Buy Credit</button>
			</form>
			</div>

						<div role="tabpanel" class="tab-pane text-center" id="show_generated_key">
						    		&nbsp;&nbsp;
						    		
						    		<div class="clearfix"></div>
						    		<form>
										<div class="form-group">
										<div ng-bind-html="genalert"></div>

									    	<div class="input-group">
									      		<div class="input-group-addon"><i class=""></i></div>
									      		<input  ng-model="show_generated_key" type="text" class="form-control" id="" placeholder="the gen_key here">
									    	</div>
									    	
									  	</div>
										
									  	<div  class=" form-group ">
									    	<div class="input-group ">
									      		<div class="input-group-addon"><i class="fa fa-dollar"></i></div>
									      		<input ng-model="amount3" type="text" class="form-control" id="amount" placeholder="Amount">
									    	</div>
									    	
									  	</div>
										
							
				<button type="button" id="login_btn" class="btn btn-block bt-login" 
				ng-click="generatekey()" data-loading-text="Initiating Account....">Generate</button>
			</form>
</div>				


  		
   <div role="tabpanel" class="tab-pane text-center" id="user_profile">
						    		&nbsp;&nbsp;
						    		
						    		<div class="clearfix"></div>
						    		<form>
										<div class="form-group">
										<div ng-bind-html="infoalert"></div>
									    	<div class="input-group">

									      		<div class="input-group-addon"><i class="fa fa-user"></i></div>
									      		<input  ng-model="username3" type="text" class="form-control" id="username" placeholder="Enter Username">
									    	</div>
									    	
									  	</div>
										
