										<div class="clearfix"></div>
						    		<form>
										<div class="form-group">
										<div ng-bind-html="deletealert"></div>

									    	<div class="input-group">
									      		<div class="input-group-addon"><i class="fa fa-user"></i></div>
									      		<input ng-model="username5"  type="text" class="form-control" id="username" placeholder="Username">
									    	</div>
									    	<span class="help-block has-error" data-error='0' id=""></span>
									  	</div>
									  	
							  			<button ng-click="delete_account()" type="button" id="reset_btn" class="btn btn-block bt-login" data-loading-text="Please wait....">Delete Account</button>
